# Health Management Platform - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=myuser
POSTGRES_PASSWORD=password123
POSTGRES_DB=myappdb

# Database Pool Settings
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
EMAIL_FROM_NAME=Health Management Platform
EMAIL_FROM_EMAIL=noreply@healthapp.com

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_URL=http://localhost:3000

# Security & Authentication
PASSWORD_MIN_LENGTH=8
VERIFICATION_CODE_EXPIRY_MINUTES=10
JWT_EXPIRY=24h
RESEND_COOLDOWN_MINUTES=2

# Validation Rules
FULL_NAME_MIN_LENGTH=2
MEDICAL_TEXT_MAX_LENGTH=1000

# Medical Configuration
HIGH_PRIORITY_TIMEFRAME=within 7 days
MEDIUM_PRIORITY_TIMEFRAME=within 2 weeks
LOW_PRIORITY_TIMEFRAME=within 4-6 weeks

# UI Configuration
DEFAULT_PAGE_SIZE=10
DATE_LOCALE=en-US
TOAST_TIMEOUT=3000
REDIRECT_DELAY=2000

# Cron Job Configuration
EMAIL_REMINDER_INTERVAL_MINUTES=15
TOKEN_CLEANUP_INTERVAL_HOURS=24

# Development/Production
NODE_ENV=development
